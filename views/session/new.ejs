<div class="container">
	<div class="row">
		<div class="col-xs-12 col-md-6 col-md-offset-3 col-lg-6 col-lg-offset-3">
            <div class="well bs-component">
				<form action="/session/create" method="POST"  class="form-horizontal" data-toggle="validator">
					<fieldset>
						<h2 class="text-center">Please Sign In</h2>

						<% if(flash && flash.err) { %>
		                    <ul class="alert alert-warning">
		                      <% Object.keys(flash.err).forEach(function(error) { %>
		                      <li><%= JSON.stringify(flash.err[error]) %></li>
		                      <% }) %>
		                    </ul>
	                  	<% } %>

						<div class="form-group">
		                    
		                    <div class="col-lg-12">
		                      <input type="text" class="form-control" id="inputEmail" placeholder="Email address" name="email" data-error="The email address is invalid" required><div class="help-block with-errors"></div>
		                    </div>
		                </div>
					  	<div class="form-group">
						    
						    <div class="col-lg-12">                     
						      <input type="password" class="form-control" id="inputPassword" placeholder="Password" name="password" required><div class="help-block with-errors"></div>	      
						    </div>
					  	</div>
					  	<div class="form-group">
						    <div class="col-lg-12">		      
						      <input type="submit" class="btn btn-primary btn-lg btn-block" value="Sign In"/>
						      <input type="hidden" name="_csrf" value="<%= _csrf %>"/>
						    </div>
					  	</div>
					</fieldset>  
				</form>
			</div>
		</div>
	</div>
</div>