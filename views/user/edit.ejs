<div class="container">
	<div class="row">
		<div class="well col-lg-5 col-lg-offset-4">
			<form action="/user/update/<%= user.id %>" method="POST" class="form-horizontal form-signin">			
				<fieldset>
					<legend>Hey you are editing a user...</legend>

					<div class="form-group">
					  <label for="inputName" class="col-lg-2 control-label">Name</label>
					  <div class="col-lg-10">
					    <input value="<%= user.name %>" name="name" type="text" class="form-control" id="inputName" placeholder="Name">
					  </div>
					</div>
					<div class="form-group">
					  <label for="inputEmail" class="col-lg-2 control-label">Email</label>
					  <div class="col-lg-10">
					    <input value="<%= user.email %>" name="email" type="text" class="form-control" id="inputEmail" placeholder="Email">
					  </div>
					</div>
					<div class="form-group">
						<div class="col-lg-10">
							<div class="checkbox">
								<% if (session.authenticated && session.User.admin) { %>
						 			<% if (user.admin) { %>						 				
						 				<label>
						 					<input type="hidden" name="admin" value="unchecked">
						 					<input type="checkbox" name="admin" checked> Admin <i class="fa fa-user-secret" aria-hidden="true"></i></i>
						 				</label>
						 			<% } else { %>						 				
						 				<label>
						 					<input type="hidden" name="admin" value="unchecked">
						 					<input type="checkbox" name="admin"> Admin <i class="fa fa-user" aria-hidden="true"></i>				
						 				</label>
						 			<% } %> 
						 		<% } %> 
				 			</div>
				 		</div>
					</div>
					<div class="form-group">
					  <label for="inputCompany" class="col-lg-2 control-label">Company</label>
					  <div class="col-lg-10">
					    <input value="<%= user.company %>" name="company" type="text" class="form-control" id="inputCompany" placeholder="Company Name">
					  </div>
					</div>
					<div class="form-group">
				      <div class="col-lg-10 col-lg-offset-2">
				        <input type="submit" value="Proceed" class="btn btn-lg btn-primary">
				        <input type="hidden" name="_csrf" value="<%= _csrf %>">	        
				      </div>
				    </div>
				</fieldset>
			</form>
		</div>
	</div>
</div>
