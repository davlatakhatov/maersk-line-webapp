<div class="container">
	<div class="row">
		<div class="col-lg-12">
			<h1>User Administration</h1>
			<table class="table">
				<tr>
					<th></th>
					<th>ID</th>
					<th>Name</th>
					<th>Company</th>
					<th>Email</th>
					<th class="text-center">Admin</th>
					<th></th>
					<th class="text-center">Actions</th>
					<th></th>
				</tr>

				<% _.each(users, function(user) { %>
				<tr data-id="<%= user.id %>" data-model="user">
					<td>
						<% if (user.online) { %>
							<i class="fa fa-check" aria-hidden="true"></i>
						<% } else {%>
							<i class="fa fa-times" aria-hidden="true"></i>
						<% } %>
					</td>
					<td><%= user.id %></td>
					<td><%= user.name %></td>
					<td><%= user.company %></td>
					<td><%= user.email %></td>
					<td class="text-center">
					<% if (user.admin) { %>
						<i class="fa fa-user-secret" aria-hidden="true"></i>
		 			<% } else { %>
		 				<i class="fa fa-user" aria-hidden="true"></i>
		 			<% } %>	
		 			</td>
					<td class="text-center"><a href="/user/show/<%= user.id %>" class="btn btn-sm btn-primary">Show</a></td>
					<td class="text-center"><a href="/user/edit/<%= user.id %>" class="btn btn-sm btn-warning">Edit</a></td>
					<!-- a better practice to use a GET -->
					<td class="text-center"><form action="/user/destroy/<%= user.id %>" method="POST">
						<input type="hidden" name="_method" value="delete">
						<input type="submit" class="btn btn-sm btn-danger" value="Delete"/>
						<input type="hidden" name="_csrf" value="<%= _csrf %>"/>
					</form></td>					
				</tr>

				<% }) %>
			</table>
		</div>
	</div>
	<hr>
</div>