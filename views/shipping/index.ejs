<div class="container">
	<div class="row">
		<div class="col-lg-12">
			<h1>Shipping Administration</h1>
			<table class="table">
				<tr>
					<th>ID</th>
					<th>Cargo</th>
					<th>Source</th>
					<th>Destination</th>
					<th>Date</th>
					<th>Receiver</th>
					<th>RecieverContact</th>
					<th>Goods</th>
					<th class="text-center">Containers</th>
					<!-- <th>Charterer</th> -->
					<th></th>
					<th class="text-center">Actions</th>
					<th></th>
				</tr>

				<% _.each(shippings, function(shipping) { %>
				<tr data-id="<%= shipping.id %>" data-model="shipping">
					<td><%= shipping.id %></td>
					<td><%= shipping.cargo %></td>
					<td><%= shipping.source %></td>
					<td><%= shipping.destination %></td>
					<td><%= shipping.date %></td>
					<td><%= shipping.receiver %></td>
					<td><%= shipping.recieverContact %></td>
					<td><%= shipping.goods %></td>
					<td class="text-center" ><%= shipping.containers %></td>					
					<td class="text-center"><a href="/shipping/show/<%= shipping.id %>" class="btn btn-sm btn-primary">Show</a></td>
					<td class="text-center"><a href="/shipping/edit/<%= shipping.id %>" class="btn btn-sm btn-warning">Edit</a></td>
					<!-- a better practice to use a GET -->
					<td class="text-center">
						<form action="/shipping/destroy/<%= shipping.id %>" method="POST">
							<input type="hidden" name="_method" value="delete">
							<input type="submit" class="btn btn-sm btn-danger" value="Delete"/>
							<input type="hidden" name="_csrf" value="<%= _csrf %>"/>
						</form>
					</td>					
				</tr>

				<% }) %>
			</table>
		</div>
	</div>
	<hr>
</div>